version: '2'
services:
  cheese-flask:
    restart: always
    build: flask
    expose:
      - "8000"
    volumes:
      - .:/opt/www
    environment:
      - SMTP_SERVER=${SMTP_SERVER}
      - USERNAME=${SMTP_USERNAME}
      - PASSWORD=${SMTP_PASSWORD}
      - SENDER=${SENDER}
      - RECEIVER=${RECEIVER}
  nginx:
    restart: always
    build: nginx
    volumes:
      - .:/opt/www
    links:
      - cheese-flask
    ports:
      - "80:80"
